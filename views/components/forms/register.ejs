<form class="" autocomplete="off" action="#" method="post">
  <div class="row mt-3">
    <div class="col-sm">
      <div class="form-floating mb-3">
        <input
          required
          type="text"
          class="form-control bg-light shadow-sm"
          name="firstName"
          id="firstName"
          placeholder="First Name" />
        <label for="firstName" class="text-muted">First Name</label>
      </div>
    </div>
    <div class="col-sm">
      <div class="form-floating mb-3">
        <input
          required
          type="text"
          class="form-control bg-light shadow-sm"
          name="lastName"
          id="lastName"
          placeholder="Last Name" />
        <label for="lastName" class="text-muted">Last Name</label>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm">
      <div class="form-floating mb-3">
        <input
          required
          type="email"
          class="form-control bg-light shadow-sm"
          name="email"
          id="email"
          placeholder="Email Address" />
        <label for="email" class="text-muted">Email Address</label>
        <div class="invalid-feedback">*Email already in use.</div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm">
      <div class="form-floating mb-3">
        <input
          required
          type="password"
          class="form-control bg-light shadow-sm"
          name="password"
          id="password"
          placeholder="Password" />
        <label for="password" class="text-muted">Password</label>
        <div class="invalid-feedback">*Passwords must match.</div>
      </div>
    </div>
    <div class="col-sm">
      <div class="form-floating mb-3">
        <input
          required
          type="password"
          class="form-control bg-light shadow-sm"
          name="passwordConfirm"
          id="passwordConfirm"
          placeholder="Confirm Password" />
        <label for="passwordConfirm" class="text-muted">Confirm Password</label>
        <div class="invalid-feedback">*Passwords must match.</div>
      </div>
    </div>
  </div>

  <div class="row m-2">
    <div class="col-sm">
      <button class="btn btn-primary btn-lg w-100">Sign-up</button>
    </div>
  </div>
</form>
